developer='http://nextscripts.com/'
url='https://wordpress.org/plugins/social-networks-auto-poster-facebook-twitter-g/'
maintainer=${developer}
pkgname='wordpress-plugin-social-networks-auto-poster-facebook-twitter-g'
pkgver=3.8.7
pkgrel=1
pkgdesc='Automaticlly publishes posts from your blog to social networks'
arch=('any')
license=('GPL')
depends=(
)
source=(
    "http://downloads.wordpress.org/plugin/social-networks-auto-poster-facebook-twitter-g.zip"
)
sha512sums=(
    'be74a8f6b560f24674049f1792508e8bc6731b594163728b70cb9b3cf74b5d18748d23f3d5f489f43674b3216fe30efd58b7f07a92fa44a937af28dc066a7fb9'
)

package() {
# Manifest
    mkdir -p ${pkgdir}/var/lib/ubos/manifests
    install -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/var/lib/ubos/manifests/${pkgname}.json

# Icons
    mkdir -p ${pkgdir}/srv/http/_appicons/${pkgname}
    install -m644 ${startdir}/appicons/{72x72,144x144}.png ${pkgdir}/srv/http/_appicons/${pkgname}/

# Source
    mkdir -p ${pkgdir}/usr/share/${pkgname}

    cp -a ${startdir}/src/social-networks-auto-poster-facebook-twitter-g ${pkgdir}/usr/share/${pkgname}/
}
