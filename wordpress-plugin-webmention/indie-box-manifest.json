{
    "type"  : "accessory",

    "info" : {
        "package"         : "##pkgname##",
        "name"            : "Webmentions",
        "tagline"         : "##pkgdesc##",
        "description"     : "##description##",

        "developer"       : "##developer##",
        "maintainer"      : "##maintainer##",

        "upstreamversion" : "##pkgver##",
        "packageversion"  : "##pkgver##-##pkgrel##",

        "licenses" : [
            "##license##"
        ]
    },
    "accessoryinfo" : {
        "appid"            : "wordpress",
        "appaccessoryid"   : "##accessoryid##",
        "appaccessorytype" : "plugin"
    },

    "roles" : {
        "apache2" : {
            "appconfigitems" : [
                {
                    "type"   : "directorytree",
                    "name"   : "wp-content/plugins/webmention",
                    "source" : "webmention",
                }
            ],
            "installers" : [
                {
                    "type"   : "perlscript",
                    "source" : "/usr/share/wordpress/bin/activate-plugin.pl"
                }
            ]
        }
    }
}

